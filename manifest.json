{
    "manifest_version": 3,
    "name": "tldr",
    "version": "1.2.0",
    "action": {
        "default_popup": "index.html"
    },
    "externally_connectable": {
        "matches": ["<all_urls>"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./src/content.js"]
        }
    ],
    "permissions": ["storage", "activeTab", "scripting"],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
